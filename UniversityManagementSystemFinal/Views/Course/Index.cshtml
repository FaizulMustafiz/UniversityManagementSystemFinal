@model IEnumerable<UniversityManagementSystemFinal.Models.Course>

@{
    ViewBag.Title = "Course View";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseCode)
