@model IEnumerable<UniversityManagementSystemFinal.Models.EnrollCourse>

@{
    ViewBag.Title = "Enrolled Course View";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnrollDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollCourseId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollCourseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollCourseId })
            </td>
        </tr>
    }

</table>
