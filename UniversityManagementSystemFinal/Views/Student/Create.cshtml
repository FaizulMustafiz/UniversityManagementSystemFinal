@model UniversityManagementSystemFinal.Models.Student

@{
    ViewBag.Title = "Add Student";
    var regId = TempData["regId"];
}

<h2>Add Student</h2>

@if (regId != null)
{
    <div class="alert alert-success">Registration Complete Successfuly. Registration Name: @regId</div>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.StudentName, new { @class = "control-label col-md-2" })
